@model List<Pharmacy.Models.Employee.OrderInfoModel>
@{
    ViewBag.Title = "Orders";
}

<h2>@ViewData["Title"] (@Model.Count) items</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        Patient Name
                    </th>
                    <th>
                        Item Count
                    </th>
                    <th>
                        Total Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PatientName</td>
                            <td>@item.ItemCount</td>
                            <td>@item.TotalPrice.ToString("C")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No order already exist.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
