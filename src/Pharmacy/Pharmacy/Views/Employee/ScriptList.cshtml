@model List<Pharmacy.Models.Employee.ScriptInfoModel>
@{
    ViewBag.Title = "Scripts";
}

<h2>@ViewData["Title"] (@Model.Count) items</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        Doctor Name
                    </th>
                    <th>
                        Patient Name
                    </th>
                    <th>
                        Medicines Scripted
                    </th>
                    <th>
                        Script Status
                    </th>
                    <th>
                        Order Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.DoctorName</td>
                    <td>@item.PatientName</td>
                    <td>@item.MedicineScripted</td>
                    @if (item.ScriptStatus == Pharmacy.Data.ScriptStatuses.Responded)
                    {
                        <td><label class="label label-success">@item.ScriptStatus.ToString()</label></td>
                    }
                    else
                    {
                        <td><label class="label label-default">@item.ScriptStatus.ToString()</label></td>

                    }
                    <td>@item.OrderStatus</td>
                </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No order already exist.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
